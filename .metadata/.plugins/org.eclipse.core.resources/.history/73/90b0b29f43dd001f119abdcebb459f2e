package com.depositor.drawer;

import java.util.logging.Logger;

public class Account 
{
	private int balance = 0;
	private static final Logger logger=Logger.getLogger(Account.class.getName());
    
	public synchronized void withdraw(int amount)
	{
		if(amount<=0)
		{
			logger.warning(Thread.currentThread().getName()+ " attempted invalid withdrawal of â‚¹" + amount);
			return;
		}
		
		while(balance<amount)
		{
			logger.info(Thread.currentThread().getName()+" is waiting to withdraw "+amount);
			try
			{
				wait();
			}
			catch(InterruptedException e)
			{
				e.printStackTrace();
			}
			
		}
		balance=balance-amount;
		System.out.println(Thread.currentThread().getName()+"is withdraw the "+amount);
		notify();
	}
	public synchronized void deposit(int amount)
	{
		balance+=amount;
		System.out.println("your updated balance is "+balance);
		notify();
	}
}
